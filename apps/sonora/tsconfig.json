{
  "extends": "@kit/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "~/config/*": ["./config/*"],
      "~/components/*": ["./components/*"],
      "~/lib/*": ["./lib/*"],
      "@kit/ui/*": ["./vendor/kit/ui/src/*"],
      "@kit/shared/*": ["./vendor/kit/shared/src/*"],
      "@kit/i18n/*": ["./vendor/kit/i18n/src/*"],
      "@kit/monitoring/*": ["./vendor/kit/monitoring/api/*"],
      "@kit/monitoring-core": ["./vendor/kit/monitoring/core/src/index.ts"],
      "@kit/monitoring-core/*": ["./vendor/kit/monitoring/core/src/*"],
      "@kit/auth/*": ["./vendor/kit/auth/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "*.ts",
    "*.tsx",
    "*.mjs",
    "./config/**/*.ts",
    "components/**/*",
    "lib/**/*.ts",
    "vendor/**/*",
    "app",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
