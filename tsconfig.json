{
  "extends": "@kit/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"],
      "~/config/*": ["./config/*"],
      "~/components/*": ["./components/*"],
      "~/lib/*": ["./lib/*"],
      "@kit/ui/*": ["./components/ui/*"],
      "@kit/shared/*": ["./lib/shared/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json"
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "*.ts",
    "*.tsx",
    "*.mjs",
    "./config/**/*.ts",
    "components/**/*",
    "lib/**/*",
    "vendor/**/*",
    "app",
    "scripts/**/*.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
